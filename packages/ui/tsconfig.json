    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["lib/*"]
    },
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": ["components/**/*"],
  "exclude": ["node_modules", "dist"]
}
