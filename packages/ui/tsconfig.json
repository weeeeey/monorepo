{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"]
    },
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": ["components/**/*", "lib/**/*", "hooks/**/*"],
  "exclude": ["node_modules", "dist"]
}
