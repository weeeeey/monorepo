{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/hooks/*": ["hooks/*"],
      "@/stores/*": ["stores/*"],
      "@/actions/*": ["actions/*"],
      "@/nextjs-utils/*": ["nextjs-utils/*"]
    },
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "stripInternal": true
  },
  "include": ["hooks/**/*", "stores/**/*", "actions/**/*", "nextjs-utils/**/*"],
  "exclude": ["node_modules", "dist"]
}
